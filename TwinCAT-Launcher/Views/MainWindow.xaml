<Window x:Class="TwinCAT_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwinCAT_Launcher"
        xmlns:mvm="clr-namespace:TwinCAT_Launcher.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <mvm:MainViewModel x:Key="vm"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource vm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Project Directory"/>
            <TextBox Text="{Binding projectData.Directory}"/>
            <Label Content="Project Name"/>
            <TextBox Text="{Binding projectData.Name}"/>
            <Button Content="Create"
                    Command="{Binding createProjectCommand}"
                    CommandParameter="{Binding projectData}"/>
        </StackPanel>
    </Grid>
</Window>
